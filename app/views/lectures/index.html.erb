<%= stylesheet_link_tag 'components/lectures_page' %>

<div class="container-index">
<div class="row">
      <h1 class="text-center mb-4"><strong>Lectures</strong></h1>

<div class="col">

      <h1 class="text-center mb-4"><strong>Lectures</strong></h1>

      <% @lectures.each do |lecture| %>
        <div class="lecture-card">
          <h2><%= lecture.title %></h2>
          <p><%= lecture.description %></p>
          <p>Available Places: <%= lecture.available_places %></p>

          <%= link_to 'View Details', lecture_path(lecture), class: 'btn btn-primary' %>
          <%= link_to 'Book Now', new_lecture_reservation_path(lecture), method: :post, class: 'btn btn-success text-white' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
</div>
