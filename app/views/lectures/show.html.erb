
  <div class="container mt-5">
    <h2><%= @lecture.title %></h2>
    <p><%= @lecture.description %></p>
    <p>Available Places: <%= @lecture.available_places %></p>

    <%= simple_form_for [@lecture, @review] do |f| %>
      <div class="form-group">
        <%= f.input :rating, collection: 0..5, class: 'form-control mb-3' %>
      </div>

      <div class="form-group">
        <%= f.input :content, class: 'form-control mb-3' %>
      </div>

        <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
    <% end %>

    <%= link_to 'See all lectures', lectures_path, class: 'btn btn-secondary mt-3' %>

  </div>

