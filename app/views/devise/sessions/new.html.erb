<%= stylesheet_link_tag 'components/login_page' %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <!-- Login form content -->
    <div class="col-md-4 border rounded p-4 bg-light">
      <h2 class="text-center mb-4"><strong>Log in</strong></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <!-- Image container (same as the registration page) -->
    <div class="col-md-4 d-flex align-items-stretch">
      <%= image_tag('login_image.png', class: 'img-fluid rounded') %>
    </div>
  </div>
</div>
