<%= stylesheet_link_tag 'components/reservations_page' %>


<div class="container mt-5">
  <h1 class="text-center mb-4">Your Reservations</h1>
  <div class="row">
    <% @reservations.each do |reservation| %>
      <div class="col-md-3 mb-4">
        <div class="card reservation-card">
          <div class="card-body">
            <h5 class="card-title"><strong>Lecture:</strong> <%= reservation.lecture.title %></h5>
            <p class="card-text"><strong>City hub:</strong> <%= reservation.location %></p>
            <%= link_to 'View details', lecture_reservation_path(reservation.lecture, reservation), method: :delete, class: 'btn btn-primary btn-danger', style: 'border-radius: 5px;' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to 'Back to Lectures', lectures_path, class: 'btn btn-secondary mt-3' %>
  </div>
</div>
